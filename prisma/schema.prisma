generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Replace with your database provider
  url      = env("DATABASE_URL") // Make sure this is set in .env
}

model Hotel {
  id       Int    @id @default(autoincrement())
  name     String
  address  String
  logo     String
  qrCode   String? @db.Text // Change this to Text
}
